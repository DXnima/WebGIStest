        SELECT TileBBox_XY(
                       #{minX,jdbcType=DOUBLE},
                       #{minY,jdbcType=DOUBLE},
                       #{maxX,jdbcType=DOUBLE},
                       #{maxY,jdbcType=DOUBLE},
                       #{z,jdbcType=INTEGER});
    </select>
