        SELECT #{z,jdbcType=INTEGER}                                                          as z,
               #{x,jdbcType=INTEGER}                                                          as x,
               #{y,jdbcType=INTEGER}                                                          as y,
               MVT_Title(#{z,jdbcType=INTEGER}, #{x,jdbcType=INTEGER}, #{y,jdbcType=INTEGER}) as mvt
    </select>
